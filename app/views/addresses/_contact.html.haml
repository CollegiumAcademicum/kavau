- present(contact) do |a|
  %tr[contact]
    %td
      = a.full_name
      = popover_notes(contact)
    = render :partial => 'common_address_cells', locals: {address: a}
    %td
      -if policy(contact).edit?
        = icon_link_to 'edit', 
          send("edit_#{@type.underscore}_contact_path", @address, contact), 
          title: t('links.edit'), id: "edit_#{contact.id}"
      -if policy(contact).destroy?
        = icon_link_to 'trash', [contact.institution, contact], :method => :delete, :data => { :confirm => 'Are you sure?' }, title: t('links.delete'), id: "delete_#{contact.id}"
