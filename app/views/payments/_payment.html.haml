-present payment do |p|
  %tr[payment]
    %td= p.date
    %td= payment.class.model_name.human
    %td.money
    %td.money
    %td.money
    %td.money= p.amount
    %td
    %td.actions
      = authorized_icon_link :edit, payment, nested_in: :credit_agreement
      = authorized_icon_link :delete, payment, nested_in: :credit_agreement
