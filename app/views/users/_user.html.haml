- present user do |u|
  %tr
    %td= u.full_name
    %td= u.login
    %td= u.human_role
    %td= u.email
    %td= u.phone_numbers
    %td
      -if policy(user).edit?
        = icon_link_to 'edit', edit_user_path(user)
      -if policy(user).destroy?
        = icon_link_to 'trash', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
