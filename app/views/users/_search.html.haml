%tr.search
  %td
    =f.search_field :name_or_first_name_cont, 
      class: 'form-control col-sm-2',
      placeholder: t('simple_form.placeholders.name_cont')
  %td.col-sm-2
    =f.search_field :login_cont, 
      class: 'form-control',
      placeholder: t('simple_form.placeholders.login_cont')
  %td.col-sm-2
    =f.select :role_eq, 
      User.valid_roles.map{|i| [t("roles.#{i}"), i]}, 
      {include_blank: t('simple_form.placeholders.role_eq')}, 
      {class: 'form-control'}
  %td.col-sm-2
    = f.search_field :email_cont,
      class: 'form-control',
      placeholder: t('simple_form.placeholders.email_cont')
  %td.col-sm-2
    = f.search_field :phone_cont,
      class: 'form-control',
      placeholder: t('simple_form.placeholders.phone_cont')
  %td.actions
    %button.btn.btn-default.btn-primary{type: :submit, title: t('simple_form.labels.defaults.search')}
      %span.glyphicon.glyphicon-search
