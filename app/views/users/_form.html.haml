= simple_form_for(@user) do |f|
  .form-inputs.col-sm-8
    = f.input :login
    -if policy(@user).permitted?(:role)
      = f.input :role, as: :select, collection: User.valid_roles.map{|r| [t("roles.#{r}"), r]}
    = f.input :password
    = f.input :password_confirmation
    = f.input :first_name
    = f.input :name
    = f.input :email
    = f.input :phone

  .form-actions.col-sm-12
    = f.button :submit, class: 'btn-primary', id: 'submit'
    = quit_button(:cancel)
